                    <div id="image">
                        <img id="preview2" src="" alt="" width="300" height="200"/>
                    </div>
                </div>
                <div class="col-lg-4">
                    <fieldset class="form-group">
                        <label for="input3">Photo N°3</label>
                        <input type="file" class="form-control-file" id="input_3">
                    </fieldset>
                    <div id="image">
                        <img id="preview3" src="" alt="" width="300" height="200"/>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary marginTop20"><i class="fa fa-check-square"></i> Valider !</button>
